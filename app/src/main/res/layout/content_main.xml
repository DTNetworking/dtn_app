<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.iologic.apps.dtn.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/OneScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/OneScenarioText"
            android:layout_weight="1" />

        <Button
            android:id="@+id/SecondScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/SecondScenarioText"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/ThirdScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/ThirdScenarioText"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FourthScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/FourthScenarioText"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FifthScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/FifthScenarioText"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/SixthScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/SixthScenarioText"
            android:layout_weight="1"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
